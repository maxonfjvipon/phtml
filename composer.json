{
  "name": "maxonfjvipon/phtml",
  "description": "Pure object-oriented HTML construction templating library with functional interface",
  "license": ["MIT"],
  "authors": [
    {
      "name": "Max Trunnikov",
      "email": "mtrunnikov@gmail.com"
    }
  ],
  "require": {
    "maxonfjvipon/elegant-elephant": "^4.3"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.8",
    "phpunit/phpunit": "^9.0",
    "php-coveralls/php-coveralls": "^2.5"
  },
  "scripts": {
    "test": "vendor/bin/phpunit --exclude skip --coverage-clover build/logs/clover.xml"
  },
  "autoload": {
    "psr-4": {
      "Maxonfjvipon\\Phtml\\": "src"
    },
    "files": [
      "src/tags.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Maxonfjvipon\\Phtml\\Tests\\": "tests"
    }
  },
  "config": {
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true,
    "optimize-autoloader": true
  }
}
