{
  "name": "maxonfjvipon/phtml",
  "license": ["MIT"],
  "authors": [
    {
      "name": "Max Trunnikov",
      "email": "mtrunnikov@gmail.com"
    }
  ],
  "require": {
    "maxonfjvipon/elegant-elephant": "^4.3"
  },
  "require-dev": {
    "phpunit/php-code-coverage": "^9.2",
    "phpunit/phpunit": "^9.0"
  },
  "autoload": {
    "psr-4": {
      "Maxonfjvipon\\Phtml\\": "src"
    },
    "files": [
      "src/tags.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Maxonfjvipon\\Phtml\\Tests\\": "tests"
    }
  },
  "config": {
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true,
    "optimize-autoloader": true
  }
}
